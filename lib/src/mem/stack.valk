cstruct StackPos {
    base: ptr
    adr: ptr
    size: uint
    fn free() {
        free(this.base)
        free(this)
    }
}
fn create_stack() StackPos {
    let base = calloc(stack_size)
    return StackPos { 
        base: base
        adr: base
        size: stack_size
    }
}

