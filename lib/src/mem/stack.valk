    #parse_last
    fn scan_globals() {
        let count : uint = 0
        #loop_globals as G, T
        #if @type_is_gc(T) && !@global_is_shared(G)
        count++
        #end
        #endloop

        let globals = calloc(sizeof(ptr) * count)
        let globalc = count
        count = 0
    
        #loop_globals as G2, T2
        #if @type_is_gc(T2) && !@global_is_shared(G2)
        @ptrv(globals, ptr, count++) = @ptr_of(G2)
        #end
        #endloop
    }

