        this.mark_stack_items()

        let marked = mem_marked

        this.demark_previous_stack_items()
        this.mark_on_stack(0)

        let max = mem_trigger / 20 * 19 // reduce 5%
        let max_marked = (marked + mem_marked_default) / 10 * 11 // increase 10%
        if max_marked > max {
            max = max_marked
        }
        mem_trigger = max
        mem_new = mem_marked
        mem_new = 0

        pools_reset()
