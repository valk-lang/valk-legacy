
cstruct Bump {
    data: ptr
    size: uint
    index: uint (0)

    static fn new() SELF {
        let size : uint = 1000
        return SELF {
            size: size
            data: alloc(size)
        }
    }

    fn get(size: uint) ptr {
        let i = this.index
        let new_i = this.index + size
        while new_i > this.size {
            let size = this.size
            this.data = resized_clone_and_free(this.data, size, size * 2)
            this.size = size * 2
        }
        this.index = new_i
        return this.data + i
    }

    fn minimum_size(size: uint) {
        if size > this.size {
            this.data = resized_clone_and_free(this.data, this.size, size)
            this.size = size
        }
    }

    fn reset() {
        this.index = 0
    }

    fn free() {
        free(this.data)
        free(this)
    }
}
